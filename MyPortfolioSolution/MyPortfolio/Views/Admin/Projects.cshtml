@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model MyPortfolio.Models.ProjectListManager

<div>
    <div class="admin-projects-inner-container">
        <div style="width:100%; margin-bottom:100px;">
            <button data-toggle="modal" data-target="#adminProjectsModal" class="btn btn-primary">Add New Project</button>
        </div>
        @foreach (var project in Model.Projects)
        {
            <div class="admin-project-containter">
                <h2>@project.Name</h2>
                <hr />
                <p>@project.Description</p>
                <img style="width:150px;height:100px;" src="@project.ImageUrl" />
                <div style="margin-top:40px;">
                    <button style="margin-right:30px;" class="btn btn-secondary">Delete</button>
                    <button class="btn btn-success">Edit</button>
                </div>
            </div>
        }
    </div>


    <div class="modal fade" id="adminProjectsModal" tabindex="-1" role="dialog" aria-labelledby="adminProjectsModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add New Project</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div style="text-align:left;" class="modal-body">
                    <div style="width:100%; text-align:left">
                        <p style="color:#3f7357;">Project Name</p>
                    </div>
                    <input type="text" class="form-control" placeholder="Enter your  project name" />
                    <br />
                    <div style="width:100%; text-align:left">
                        <p style="color:#3f7357;">Project Description</p>
                    </div>
                    <textarea class="form-control" rows="7"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>

</div>

