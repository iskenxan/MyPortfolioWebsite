<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <section class="top">
        <div class="top-inner">
            <div class="top-inner-content">
                <div class="navigation-bar-container">
                    <div class="logo">
                        <h4>{ iskander.samatov };</h4>
                         <p>Software Developer</p> 
                    </div>
                    <ul class="navigation-bar">
                        <li role="presentation"><a class="@(ViewContext.RouteData.Values["Action"].ToString()=="Index"?"active":"")"  href="/Home/Index">About</a></li>
                        <li role="presentation"><a class="@(ViewContext.RouteData.Values["Action"].ToString()=="Projects"?"active":"")" href="/Home/Projects">Projects</a></li>
                        <li role="presentation"><a class="@(ViewContext.RouteData.Values["Action"].ToString()=="Reviews"?"active":"")" href="/Home/Reviews">Reviews</a></li>
                        <li role="presentation"><a class="@(ViewContext.RouteData.Values["Action"].ToString()=="Social"?"active":"")" href="/Home/Social">Social</a></li>
                    </ul>
                </div>
                <div class="top-content-bottom">
                    <h1>Hi, I'm a Software Developer and Designer(ish)</h1>
                    <h4>I can help you build your next project</h4>
                    <img src="~/Content/Images/scroll_down_icon.png" class="scroll-down-pointer" />
                </div>
            </div>
        </div>
    </section>
    <div class="body-content">
        <div class="container body-inner-container">
            @RenderBody()
        </div>

        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom")

    @RenderSection("scripts", required: false)
</body>
</html>
